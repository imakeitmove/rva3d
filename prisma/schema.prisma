generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  createdAt     DateTime @default(now())

  /// Notion "User ID" from Portal Users DB
  // portalportalUserId  String?  @unique
  portalUserId    String?  @unique @map("portalportalUserId")

  accounts      Account[]
  sessions      Session[]
  postViews     PostView[]
}

model Account {
  id                String  @id @default(cuid())
  // portalUserId            String
  userId            String @map("portalUserId")
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // RELATION MUST POINT TO User.id
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  // portalUserId       String
  userId       String @map("portalUserId")
  expires      DateTime

  // RELATION MUST POINT TO User.id
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PostView {
  id           String   @id @default(cuid())
  // portalUserId       String
  userId       String @map("portalUserId")
  postId       String   // Notion Post ID / slug
  lastViewedAt DateTime @default(now())

  // RELATION MUST POINT TO User.id
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}
